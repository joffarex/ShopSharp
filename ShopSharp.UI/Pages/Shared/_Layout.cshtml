<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ShopSharp.UI</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.css">
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <a asp-area="" asp-page="/Admin/Index">Admin</a>
    <a asp-area="" asp-page="/Index">Home</a>
    <a asp-area="" asp-page="/Accounts/Login">Sign In</a>
    <a asp-area="" asp-controller="Account" asp-action="Logout">Sign Out</a>

</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", false)
</body>
</html>