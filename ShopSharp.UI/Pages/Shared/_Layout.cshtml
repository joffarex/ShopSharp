<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ShopSharp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.css">
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>

<nav class="navbar is-black" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" asp-page="/Index">
            @* <img src="https://bulma.io/images/bulma-logo-white.png" width="112" height="28" alt="logo"> *@
            <p class="title has-text-primary" style="padding-bottom: 5px;">ShopSharp</p>
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="navbar-item" asp-area="" asp-page="/Admin/Index">Admin</a>
            }

        </div>

        <div class="navbar-end">
            <vc:cart view="Small"></vc:cart>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="navbar-item" asp-area="" asp-controller="Account" asp-action="Logout">Sign Out</a>
            }
            else
            {
                <a class="navbar-item" asp-area="" asp-page="/Accounts/Login">Sign In</a>
            }
        </div>
    </div>
</nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="content has-text-centered">
        <p>
            <strong>ShopSharp</strong> by <a target="_blank" href="https://www.github.com/joffarex">Tornike Goshadze (joffarex)</a>. The source code is licensed
            <a target="_blank" href="http://opensource.org/licenses/mit-license.php">MIT</a>.
        </p>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", false)
</body>
</html>