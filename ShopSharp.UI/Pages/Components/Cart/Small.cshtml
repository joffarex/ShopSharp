@model IEnumerable<ShopSharp.Application.Cart.ViewModels.CartViewModel>

@{

}


<div>
    <h2>Small Cart Component</h2>
    @foreach (var product in Model)
    {
        <div>
            <span>@product.Name -</span>
            <span>@product.Value -</span>
            <span>@product.Quantity</span>
        </div>
    }
</div>