@model IEnumerable<ShopSharp.Application.Cart.ViewModels.CartViewModel>

@{

}


<div>
    <p class="title has-text-primary">Cart</p>
    @foreach (var product in Model)
    {
        <article class="media">
            <figure class="media-left">
                <p class="image is-64x64">
                    <img src="~/images/product-image.jpg" alt="Product image">
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <header class="title has-text-primary">@product.Name</header>
                    <div class="level">
                        <div class="level-item">Quantity: @product.Quantity</div>
                        <div class="level-item">Size: @product.StockId</div>
                        <div class="level-item">Price: @product.Value</div>
                    </div>
                </div>

            </div>
        </article>
    }
</div>